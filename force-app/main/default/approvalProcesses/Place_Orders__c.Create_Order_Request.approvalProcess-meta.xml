<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Ticker__c</field>
        <field>Purchase_Date__c</field>
        <field>Quantity__c</field>
        <field>Amount__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>19bcs093@gbu.ac.in</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Create Order Request</label>
        <name>Create_Order_Request</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Buy_Order_Approved</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Notify_for_Approval_of_Order</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_Picklist1</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejection_Mail</name>
            <type>Alert</type>
        </action>
        <action>
            <name>update_Picklist2</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Rejected_Order</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Order_Pending_Status</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Picklist</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Create Order Request</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
